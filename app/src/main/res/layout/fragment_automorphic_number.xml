<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AutomorphicNumberFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/etAutomorphicNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Automorphic Number"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_margin="20dp"
        android:inputType="number"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAutomorphicNumber"
        android:text="Check Automorphic"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="30dp"
        />


    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:background="#fff"
        android:layout_marginTop="50dp"
        android:text="Result can be seen here"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:textStyle="bold"
        />
</LinearLayout>